<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mki.kehrwochenprojekt.mobilecomputing_sose17.MainActivity">

    <Button
        android:id="@+id/createFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Flat"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/createTaskButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/myTasksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show my Tasks"
        app:layout_constraintRight_toLeftOf="@+id/confirmTaskButton"
        android:layout_marginRight="57dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/createTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Task"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/myTasksButton"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/myFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage my Flat"
        app:layout_constraintLeft_toRightOf="@+id/createTaskButton"
        android:layout_marginLeft="61dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/confirmTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm a Task"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/myFlatButton"
        app:layout_constraintLeft_toRightOf="@+id/createTaskButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.779" />
</android.support.constraint.ConstraintLayout>
