<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mki.kehrwochenprojekt.mobilecomputing_sose17.MainActivity">

    <Button
        android:id="@+id/createFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Flat"
        tools:layout_editor_absoluteX="129dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmTaskButton"
        app:layout_constraintVertical_bias="0.378" />

    <Button
        android:id="@+id/myTasksButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show my Tasks"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/createFlatButton"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/createTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a Task"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmTaskButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/myTasksButton"
        app:layout_constraintRight_toLeftOf="@+id/myFlatButton"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.219"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.098" />

    <Button
        android:id="@+id/rateTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate a Task"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/myFlatButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/createFlatButton"
        app:layout_constraintLeft_toRightOf="@+id/myTasksButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.461"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.714" />

    <Button
        android:id="@+id/myFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage my Flat"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmTaskButton"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/confirmTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm a Task"
        tools:layout_editor_absoluteX="124dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>
